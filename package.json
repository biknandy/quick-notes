{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quick-notes",
  "title": "Quick Notes",
  "description": "Create simple markdown notes in Raycast locally. No integrations required!",
  "icon": "command-icon.png",
  "author": "bik",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "View Notes",
      "description": "Manage and view your quick notes.",
      "mode": "view"
    }
  ],
  "keywords": [
    "notes",
    "markdown",
    "quick"
  ],
  "preferences": [
    {
      "name": "fileLocation",
      "title": "Notes File Location",
      "description": "Set where to save markdown files",
      "type": "directory",
      "required": true,
      "label": "File Location"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.1",
    "@raycast/utils": "^1.12.5",
    "date-fns": "^3.3.1",
    "jotai": "^2.7.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
